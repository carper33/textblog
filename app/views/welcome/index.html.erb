<header class="header">
  <main class = "container">
    <%= render 'shared/nav_bar' %>
    <section class="welcome">
      <h1 class="welcome-text">Un pedacito de ti</h1>
      <div class="vista-lista-post">
        <p>These are the users that posted lately:</p>
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.username.capitalize, posts_path(user.username) %></li>
          <% end %>
        </ul>
      </div>
      <div class="markdown-info">
        <%= link_to "http://daringfireball.net/projects/markdown/syntax" do %>
        <% end %>
      </div>
    </section>
    <br>
    <% if current_user%>
      <div class="primer-post">
        <%= link_to "Tu primer post", new_post_path(current_user.username) %>
      </div>
    <% end %>
 	</main>
</header>

