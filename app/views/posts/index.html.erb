<link rel="stylesheet" href="/posts">
<h1 class= "post-header">Listing posts</h1>
<section class="container">
  <nav class="nav">
    <ul class="main_menu">
      <li><a href="/users/sign_up">LOG IN</a></li>
      <li><a href="/">HOME</a></li>
      <li><a href="/:user_name/posts">TEXTS</a></li>
      <li><a href="">ABOUT ME</a></li>
    </ul>
  </nav>
  <div class="table">
    <table>
        <thead>
          <tr class="list-users">
            <th>User</th>
            <th>Titulo</th>
            <th>Contenido</th>
          
            <th colspan="3"></th>
          </tr>
        </thead>

      <tbody class="posts-table">
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(@user.username, post.slug) %></td>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
