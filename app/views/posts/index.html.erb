<link rel="stylesheet" href="/posts">
<h1 class= "post-header">Listing posts</h1>
<section class="container">
<table>
    <thead>
      <tr class="list-users">
        <th>User</th>
        <th>Titulo</th>
        <th>Contenido</th>
      
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="posts-table">
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(@user.username, post.slug) %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
